    "build": "browserify pact-lang-api.js -o pact-lang-api.min.js && browserify pact-lang-api-global.js -o pact-lang-api-global.min.js"
  },
  "repository": {
    "type": "git",
    "url": "github.com/kadena-io/pact-lang-api"
  },
  "author": "Will Martino",
  "license": "BSD3",
  "dependencies": {
    "blakejs": "^1.0.1",
    "browserify": "^16.5.1",
    "chainweb": "^2.0.3",
    "node-fetch": "^2.6.6",
    "tweetnacl": "^0.14.5"
  },
  "devDependencies": {
    "blue-tape": "^1.0.0",
    "jest": "^27.4.3",
    "tape": "^4.13.2"
  }
}
